{
  "name": "bonfire-vscode",
  "displayName": "BonFire",
  "description": "Enterprise Code & Data Intelligence Platform - 3D visualization and AI-powered automation",
  "version": "1.0.0",
  "publisher": "bonfire",
  "icon": "icon.png",
  "engines": {
    "vscode": "^1.85.0"
  },
  "categories": [
    "Visualization",
    "Data Science",
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "bonfire.visualize",
        "title": "BonFire: Visualize Repository",
        "icon": "$(flame)"
      },
      {
        "command": "bonfire.analyze",
        "title": "BonFire: Analyze Code",
        "icon": "$(graph)"
      },
      {
        "command": "bonfire.deploy",
        "title": "BonFire: Deploy",
        "icon": "$(rocket)"
      },
      {
        "command": "bonfire.showDependencies",
        "title": "BonFire: Show Dependencies",
        "icon": "$(list-tree)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "bonfire",
          "title": "BonFire",
          "icon": "resources/bonfire-icon.svg"
        }
      ]
    },
    "views": {
      "bonfire": [
        {
          "type": "webview",
          "id": "bonfire.view",
          "name": "3D Visualization"
        },
        {
          "id": "bonfire.dependencies",
          "name": "Dependencies"
        },
        {
          "id": "bonfire.mcp",
          "name": "MCP Status"
        }
      ]
    },
    "configuration": {
      "title": "BonFire",
      "properties": {
        "bonfire.apiUrl": {
          "type": "string",
          "default": "http://localhost:3001",
          "description": "BonFire API server URL"
        },
        "bonfire.githubToken": {
          "type": "string",
          "default": "",
          "description": "GitHub Personal Access Token"
        },
        "bonfire.anthropicApiKey": {
          "type": "string",
          "default": "",
          "description": "Anthropic API Key for Claude"
        },
        "bonfire.defaultView": {
          "type": "string",
          "default": "developer",
          "enum": [
            "developer",
            "finance",
            "hr",
            "pm",
            "devops"
          ],
          "description": "Default role-based view"
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "package": "vsce package",
    "test": "vitest"
  },
  "devDependencies": {
    "@types/vscode": "^1.85.0",
    "@types/node": "^20.10.0",
    "@vscode/vsce": "^2.22.0",
    "typescript": "^5.3.2",
    "vitest": "^1.0.4"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.10.0",
    "@octokit/rest": "^20.0.2",
    "axios": "^1.6.2"
  }
}
